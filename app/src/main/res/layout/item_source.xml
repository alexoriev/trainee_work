<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/source_item"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:background="#F8F9FB">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/source_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        tools:src="@drawable/fox" />

    <TextView
        android:id="@+id/source_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:lineSpacingExtra="8sp"
        android:textColor="#191C1D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/source_iv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/cities" />

    <TextView
        android:id="@+id/source_category_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="6sp"
        android:textColor="#40484B"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/source_tv"
        app:layout_constraintTop_toBottomOf="@id/source_tv"
        android:text="@string/source_category_country" />

</androidx.constraintlayout.widget.ConstraintLayout>